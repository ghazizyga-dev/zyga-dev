{
  "name": "ai-boilerplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cd extension && pnpm install --frozen-lockfile=false --prod=false && WXT_API_URL=$BETTER_AUTH_URL pnpm zip && cp .output/ai-boilerplate-extension-*-chrome.zip ../public/extension.zip && cd .. && next build",
    "check": "eslint . && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "next build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:architecture": "python3.10 -m scripts.checks.architecture.main",
    "check:ruleof6": "python3.10 -m scripts.checks.architecture.ruleof6.main",
    "subsystem-tree": "python3.10 -m scripts.checks.architecture.tree.main"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@auth/drizzle-adapter": "^1.7.2",
    "@t3-oss/env-nextjs": "^0.12.0",
    "better-auth": "^1.3",
    "drizzle-orm": "^0.41.0",
    "next": "^16.1.6",
    "postgres": "^3.4.4",
    "posthog-js": "^1.336.4",
    "posthog-node": "^5.24.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "unipile-node-sdk": "^1.9.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.10",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.0.0",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.23.0",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vitest": "^4.0.18"
  },
  "ct3aMetadata": {
    "initVersion": "7.40.0"
  },
  "packageManager": "pnpm@8.15.5"
}
